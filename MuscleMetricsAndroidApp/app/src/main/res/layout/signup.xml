<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/imageView1"
        android:paddingBottom="10dp"/>

    <TextView
        android:text="Please Fill in the Required Fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/mmtext" />

    <ImageView
        android:src="@drawable/lines"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/line"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"/>

    <ScrollView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="Account Information:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/accountText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/firstName"
                android:background="@drawable/edit_border"
                android:hint="  first name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/lastName"
                android:background="@drawable/edit_border"
                android:hint="  last name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/email"
                android:background="@drawable/edit_border"
                android:hint="  email" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/birthdate"
                android:background="@drawable/edit_border"
                android:hint=" birthdate" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/password"
                android:background="@drawable/edit_border"
                android:hint=" password" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/confirmPassword"
                android:background="@drawable/edit_border"
                android:hint=" confirm password" />


            <TextView
                android:layout_marginTop="50dp"
                android:text="Fitness Information:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/fitnessText" />

            <Spinner
                android:id="@+id/static_spinner"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:ems="10"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/weight"
                android:background="@drawable/edit_border"
                android:hint=" weight (lbs or kg)" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:maxLength="3"
                android:ems="10"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/height"
                android:background="@drawable/edit_border"
                android:hint=" height ( ft/in  or  m/cm )" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:ems="10"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/bodyfat"
                android:background="@drawable/edit_border"
                android:hint=" bodyfat percentage" />

            <TextView
                android:layout_marginTop="50dp"
                android:text="My Goals:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/goalText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:ems="10"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/goalWeight"
                android:background="@drawable/edit_border"
                android:hint=" goal weight" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:ems="10"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/goalBodyfat"
                android:background="@drawable/edit_border"
                android:hint=" goal body fat" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>